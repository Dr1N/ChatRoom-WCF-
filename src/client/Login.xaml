<Window x:Class="MyChat.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="62" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label VerticalContentAlignment="Center" FontWeight="Bold">Логин:</Label>
        <TextBox Grid.Column="1" Name="tbLogin" Margin="5" VerticalContentAlignment="Center">Bill Gates</TextBox>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnOk" Content="Ок" Width="50" Margin="3" IsDefault="True" Click="btnOk_Click"/>
            <Button Name="btnCancel" Content="Выход" Width="50" Margin="3" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>